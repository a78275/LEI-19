<?xml version="1.0"?>
<odoo>
	<!-- Form -->
	<record id="view_form_aluno" model="ir.ui.view">
		<field name="name">Aluno Form</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<form>
				<header>
                     <button name="desativar"
                        type="object"
                        string="Desativar"
                        attrs="{'invisible':[('active','=',False)]}"
                        groups="planum.planum_group_direcao_curso"
                        class="oe_highlight" />
                    <button name="ativar"
                        type="object"
                        string="Ativar"
                        attrs="{'invisible':[('active','=',True)]}"
                        groups="planum.planum_group_direcao_curso"
                        class="oe_highlight" />
				</header>
				<sheet>
					<!-- Content goes here: -->
					<group name="group_top">
						<group name="group_left" >
							<field name="name" />
							<field name="nr_mecanografico" />
							<field name="email" />
							<field name="estatuto" widget="radio" />
							<field name="active" groups="planum.planum_group_direcao_curso"/>
						</group>
						<group name="group_right">
							<field name="curso_id" string="Curso"/>
                            <field name="ano" string="Ano" readonly="1"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<!-- Tree -->
	<record id="view_tree_aluno" model="ir.ui.view">
		<field name="name">Lista de Alunos</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<tree default_order="nr_mecanografico">
				<field name="name"/>
				<field name="nr_mecanografico" />
				<field name="curso_id" />
				<field name="ano"/>
			</tree>
		</field>
	</record>

	<!-- Search -->	
	<record id="view_search_aluno" model="ir.ui.view">
		<field name="name">Filtros do Aluno</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<search>
              <field name="name" string="Nome"
                  filter_domain="[('name','ilike',self)]"/>
              <field name="nr_mecanografico" string="Nº Mecanográfico"
                  filter_domain="[('nr_mecanografico','ilike',self)]"/>
              <field name="curso_id" string="Curso"
                  filter_domain="[('curso_id','ilike',self)]"/>
              <field name="ano" string="Ano"
                  filter_domain="[('ano','ilike',self)]"/>
            </search>
		</field>
	</record>
</odoo>
