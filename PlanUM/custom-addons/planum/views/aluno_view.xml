<?xml version="1.0"?>
<odoo>
	<record id="view_form_aluno" model="ir.ui.view">
		<field name="name">Aluno Form</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<!-- Buttons will go here -->
					<!--<button name="button_check_isbn" type="object"
						string="Check ISBN" /> -->
				</header>
				<sheet>
					<!-- Content goes here: -->
					<group name="group_top">
						<group name="group_left">
							<field name="nome" />
							<field name="nr_mecanografico" />
							<field name="media_acesso" />
							<field name="estatuto" />
							<field name="active" />
						</group>
						<group name="group_right">
							<field name="curso_id" />
							<field name="ano"/>
							<field name="plano_estudos_id" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="view_tree_aluno" model="ir.ui.view">
		<field name="name">Lista de Alunos</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<tree>
				<field name="nome"/>
				<field name="nr_mecanografico" />
				<field name="curso_id" />
				<field name="ano"/>
			</tree>
		</field>
	</record>	
	<record id="view_search_aluno" model="ir.ui.view">
		<field name="name">Filtros do Aluno</field>
		<field name="model">planum.aluno</field>
		<field name="arch" type="xml">
			<search>
              <field name="nome" string="Nome"
                  filter_domain="[('nome','ilike',self)]"/>
              <field name="nr_mecanografico" string="Nº Mecanográfico"
                  filter_domain="[('nr_mecanografico','ilike',self)]"/>
              <field name="curso_id" string="Curso"
                  filter_domain="[('curso_id','ilike',self)]"/>
              <field name="ano" string="Ano"
                  filter_domain="[('ano','ilike',self)]"/>
            </search>
		</field>
	</record>
</odoo>
